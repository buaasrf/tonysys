<included>
    <appender name="ad_visit_appender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${dauth.log.dir}/ad_visit.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${dauth.log.dir}/ad_visit.%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>

        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%logger %d{yyyy-MM-dd HH:mm:ss} %msg%n</Pattern>
        </layout>
    </appender>

    <appender name="ad_push_appender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${dauth.log.dir}/ad_push.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${dauth.log.dir}/ad_push.%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>

        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%logger %d{yyyy-MM-dd HH:mm:ss} %msg%n</Pattern>
        </layout>
    </appender>

    <appender name="ad_show_appender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${dauth.log.dir}/ad_show.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${dauth.log.dir}/ad_show.%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>

        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%logger %d{yyyy-MM-dd HH:mm:ss} %msg%n</Pattern>
        </layout>
    </appender>

    <appender name="ad_click_appender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${dauth.log.dir}/ad_click.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${dauth.log.dir}/ad_click.%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>

        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%logger %d{yyyy-MM-dd HH:mm:ss} %msg%n</Pattern>
        </layout>
    </appender>

    <logger name="ad_visit" level="info">
        <appender-ref ref="ad_visit_appender" />
    </logger>

    <logger name="ad_push" level="info">
        <appender-ref ref="ad_push_appender" />
    </logger>

    <logger name="ad_show" level="info">
        <appender-ref ref="ad_show_appender" />
    </logger>

    <logger name="ad_click" level="info">
        <appender-ref ref="ad_click_appender" />
    </logger>

</included>